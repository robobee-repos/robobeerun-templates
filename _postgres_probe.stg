/*
 * Adds readiness and liveless probes to PostgreSQL.
 * 
 * The expected environment parameters are:
 * - PGUSER
 * - PGPASSWORD
 * - PGDATABASE
 * - PGHOST
 * 
 * Example:
 * 
 * import "_postgres_probe.stg"
 * 
 * cc-db-deploy-yaml(parent, vars) ::= <<
 * apiVersion: extensions/v1beta1
 * kind: Deployment
 * metadata:
 *   name: postgres
 *   namespace: anrisoftware-com
 * spec:
 *   replicas: 1
 *   template:
 *     spec:
 *       containers:
 *       - image: <vars.postgres.image.name>:<vars.postgres.image.version>
 *         name: postgres
 *         ports:
 *         - containerPort: 5432
 *           name: postgres
 *         env:
 *         - name: PGUSER
 *           valueFrom:
 *             secretKeyRef:
 *               name: keycloak-<vars.keycloak.revision>
 *               key: user
 *         - name: PGPASSWORD
 *           valueFrom:
 *             secretKeyRef:
 *               name: keycloak-<vars.keycloak.revision>
 *               key: password
 *         - name: PGDATABASE
 *           valueFrom:
 *             secretKeyRef:
 *               name: keycloak-<vars.keycloak.revision>
 *               key: database
 *         - name: PGHOST
 *           value: "127.0.0.1"
 *         <postgresReadinessProbe(parent, vars)>
 * ...
 * >>
 */

/*
 *
 */
postgresReadinessProbe(parent, vars) ::= <<
readinessProbe:
  timeoutSeconds: 3
  initialDelaySeconds: <if(vars.readinessProbe.initialDelaySeconds)><vars.readinessProbe.initialDelaySeconds><else>3<endif>
  exec:
    command:
    - /bin/sh
    - -c
    - psql -c 'SELECT 1'
livenessProbe:
  timeoutSeconds: 3
  initialDelaySeconds: <if(vars.livenessProbe.initialDelaySeconds)><vars.livenessProbe.initialDelaySeconds><else>30<endif>
  tcpSocket:
    port: postgres
>>
